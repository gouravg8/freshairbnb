generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  username String    @unique
  password String
  listings Listing[]
  review   Review[]
}

model Listing {
  id          Int      @id @default(autoincrement())
  owner       User     @relation(fields: [userId], references: [id])
  userId      Int
  title       String
  description String
  photo       String
  price       Int
  country     String
  location    String
  category    String[]
  review      Review[]
}

model Review {
  id           Int     @id @default(autoincrement())
  owner        User    @relation(fields: [userName], references: [username])
  userName     String
  ownerListing Listing @relation(fields: [listingId], references: [id])
  listingId    Int
  review       String
  rating       Int
}
